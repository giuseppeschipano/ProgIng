            <children>
                <Button fx:id="prenotaButton" mnemonicParsing="false" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Prenota Tratta" />
                <Button fx:id="acquistaButton" mnemonicParsing="false" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Acquista Tratta" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" />
